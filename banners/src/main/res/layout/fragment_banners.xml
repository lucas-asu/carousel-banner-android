<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.lcruz.banners.fragments.BannerCarouselFragment"
    android:background="#CCC"
    android:id="@+id/lb_main_layout">

    <android.support.v4.view.ViewPager
        android:id="@+id/lb_pages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/lb_dots_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal|bottom"></LinearLayout>

</FrameLayout>
